extends layout

block content
  .container
    h1 Login To Your Account
    p.lead Please enter your username and password to login.
    br
    form(role='form', action="/login",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Enter your Username')
      .form-group
          input.form-control(type='password', name="password", placeholder='Enter your Password')
      button.btn.btn-default(type='submit') Login
      &nbsp;
      a(href='/')
       button.btn.btn-primary(type="button") Cancel